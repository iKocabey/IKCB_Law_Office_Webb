@using EntityLayer.Concrete
@model List<tblMessage>
@{
    ViewBag.Title = "GetSendMessageList";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}


<div class="white-box">
    <h3>Gelen Kutusu</h3>
    <!-- row -->
    <div class="row">
        <div class="inbox-center">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Mesaj Başlığı</th>
                        <th>Kime</th>
                        <th>Gönderim Tarihi</th>
                        <th>Mesajı Aç</th>
                        <th>Mesajı Sil</th>
                    </tr>
                </thead>

                @foreach (var item in Model)
                {
                    <tbody>
                        <tr class="unread">

                            <td class="hidden-xs">@item.Subject</td>
                            <td>@item.ReceiverId</td>
                            <td class="text-right"> @item.MessageDate </td>
                            <td><a href="/Message/GetMessageList/@item.MessageId" class="btn btn-block btn-outline btn-info btn-1e">Aç</a></td>
                            <td><a href="/Message/GetMessageList/@item.MessageId" class="btn btn-block btn-outline btn-danger">sil</a></td>
                        </tr>
                    </tbody>
                }
            </table>
        </div>
    </div>
    <!-- /.row -->
</div>



