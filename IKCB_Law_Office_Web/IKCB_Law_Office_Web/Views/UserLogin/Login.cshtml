    <section id="wrapper" class="login-register">
        <div class="login-box">
            <div class="white-box">
               
                <form class="form-horizontal form-material" method="post">
                    <div class="form-group">
                        <h3 class="box-title m-b-20">Giriş Yap</h3>
                        <div class="form-group ">
                            <div class="col-xs-12">
                                <input class="form-control" name="perAdiSoyadi" type="text" placeholder="Kullanıcı Adı">
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-xs-12">
                                <input class="form-control" type="password" name="perSifre" placeholder="Şifre">
                            </div>
                        </div>
                        
                        <div class="form-group">
                            <div class="col-md-12">

                                <a href="javascript:void(0)" id="to-recover" class="text-dark pull-right"><i class="fa fa-lock m-r-5"></i> Forgot pwd?</a>
                            </div>
                        </div>
                        <div class="form-group text-center m-t-20">
                            <div class="col-xs-12">
                                <button class="btn btn-info btn-lg btn-block text-uppercase waves-effect waves-light" type="submit">Giriş Yap</button>
                            </div>
                        </div>
                    </div>

                </form>
               
